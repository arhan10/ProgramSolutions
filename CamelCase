public static void CamelCase(string str)
	{
	    var words = str.Split(' ');
		for(int i=0;i<words.Length;i++)
		{
		  
		  if(i==0)
		  {
		    Console.Write((words[i].ToLower()).Substring(0,1)+words[i].Substring(1).ToLower());
		  }
		  else
      {
         Console.Write((words[i].ToUpper()).Substring(0,1)+words[i].Substring(1).ToLower());
      }
		 Console.Write(" ");
		}
		Console.WriteLine();
	}
